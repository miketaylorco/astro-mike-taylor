---
import Main from '../../layouts/main.astro';
import { getUser, isAdmin, createSupabaseAdminClient } from '../../lib/supabase';
import { sanityClient } from "sanity:client";

export const prerender = false;

const contentProps = { title: "Admin Dashboard" };

// Check authentication and admin status
const user = await getUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/auth/error?message=access_denied');
}

if (!isAdmin(user.email)) {
  return Astro.redirect('/auth/error?message=access_denied');
}

// Fetch data for dashboard
const supabaseAdmin = createSupabaseAdminClient();

// Get users with their access counts
const { data: users } = await supabaseAdmin
  .from('profiles')
  .select('*, article_access(count)')
  .order('created_at', { ascending: false });

// Get recent access logs
const { data: recentLogs } = await supabaseAdmin
  .from('content_access_log')
  .select('*, profiles(email, display_name)')
  .order('accessed_at', { ascending: false })
  .limit(20);

// Get protected articles from Sanity
const protectedArticles = await sanityClient.fetch(`
  *[_type == "post" && accessLevel == "protected"]{
    _id,
    title,
    slug
  }
`);

// Stats
const totalUsers = users?.length || 0;
const totalProtectedArticles = protectedArticles?.length || 0;
const recentActivityCount = recentLogs?.length || 0;
---

<Main content={contentProps}>
<main class="container mx-auto min-h-screen max-w-5xl p-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">Admin Dashboard</h1>
    <div class="flex items-center gap-4">
      <a href="/" class="text-gray-500 hover:underline">View Site</a>
      <a href="/api/auth/signout" class="text-gray-500 hover:underline">Sign out</a>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-blue-600">{totalUsers}</div>
      <div class="text-gray-600">Total Users</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-amber-600">{totalProtectedArticles}</div>
      <div class="text-gray-600">Protected Articles</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-green-600">{recentActivityCount}</div>
      <div class="text-gray-600">Recent Views</div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="flex gap-4">
      <a
        href="/admin/invite"
        class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Invite User
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Users List -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Users</h2>
      {users && users.length > 0 ? (
        <ul class="divide-y divide-gray-200">
          {users.map((profile: any) => (
            <li class="py-3">
              <a href={`/admin/user/${profile.id}`} class="flex items-center justify-between hover:bg-gray-50 -mx-2 px-2 py-1 rounded">
                <div>
                  <div class="font-medium">{profile.display_name || profile.email}</div>
                  <div class="text-sm text-gray-500">{profile.email}</div>
                </div>
                <div class="text-sm text-gray-500">
                  {profile.article_access?.[0]?.count || 0} articles
                </div>
              </a>
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-gray-500">No users yet. <a href="/admin/invite" class="text-blue-600 hover:underline">Invite your first user</a>.</p>
      )}
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
      {recentLogs && recentLogs.length > 0 ? (
        <ul class="divide-y divide-gray-200">
          {recentLogs.slice(0, 10).map((log: any) => (
            <li class="py-3">
              <div class="flex items-center justify-between">
                <div>
                  <div class="font-medium">{log.profiles?.display_name || log.profiles?.email || 'Unknown'}</div>
                  <div class="text-sm text-gray-500 truncate max-w-[200px]">
                    Viewed: {log.sanity_document_id}
                  </div>
                </div>
                <div class="text-sm text-gray-400">
                  {new Date(log.accessed_at).toLocaleDateString()}
                </div>
              </div>
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-gray-500">No activity yet.</p>
      )}
    </div>
  </div>

  <!-- Protected Articles -->
  <div class="bg-white rounded-lg shadow p-6 mt-8">
    <h2 class="text-xl font-semibold mb-4">Protected Articles</h2>
    {protectedArticles && protectedArticles.length > 0 ? (
      <ul class="divide-y divide-gray-200">
        {protectedArticles.map((article: any) => (
          <li class="py-3 flex items-center justify-between">
            <div>
              <div class="font-medium">{article.title}</div>
              <div class="text-sm text-gray-500">ID: {article._id}</div>
            </div>
            <a
              href={`/posts/${article.slug.current}`}
              class="text-blue-600 hover:underline text-sm"
              target="_blank"
            >
              View
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-gray-500">No protected articles. Set an article's access level to "Protected" in Sanity to see it here.</p>
    )}
  </div>
</main>
</Main>
