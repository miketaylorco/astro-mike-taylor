---
interface Props {
  documentId: string;
  isAuthenticated: boolean;
  returnUrl?: string;
  postTitle?: string;
}

const { documentId, isAuthenticated, returnUrl = '', postTitle = 'this article' } = Astro.props;
---

<div class="protected-content" data-document-id={documentId} data-authenticated={isAuthenticated.toString()} data-post-title={postTitle}>
  {isAuthenticated ? (
    <!-- Authenticated: Show loading state then fetch content -->
    <div class="content-loader">
      <div class="loading-state">
        <div class="animate-pulse">
          <div class="h-4 bg-gray-200 rounded w-3/4 mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-full mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-5/6 mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-2/3"></div>
        </div>
        <p class="text-gray-500 text-center mt-4">Loading protected content...</p>
      </div>
      <div class="loaded-content prose hidden"></div>
      <div class="access-denied-state hidden">
        <slot name="teaser" />
        <div class="border-t border-gray-200 my-8 pt-8">
          <div class="bg-gradient-to-b from-gray-50 to-white border border-gray-200 rounded-lg p-8">
            <div class="text-center mb-6">
              <svg class="w-12 h-12 mx-auto text-amber-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <h3 class="text-xl font-semibold text-gray-900">Access Required</h3>
              <p class="text-gray-600 mt-2">You don't have access to the full content of this article.</p>
            </div>

            <form action="/api/content/request-access" method="POST" class="space-y-4 request-access-form">
              <input type="hidden" name="documentId" value={documentId} />
              <input type="hidden" name="postTitle" value={postTitle} />
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message (optional)</label>
                <textarea
                  id="message"
                  name="message"
                  rows="3"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  placeholder="Let the admin know why you'd like access..."
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors font-medium"
              >
                Request Access
              </button>
            </form>
            <div class="request-success hidden mt-4 p-4 bg-green-50 text-green-700 rounded-lg text-center">
              Your access request has been sent to the administrator.
            </div>
            <div class="request-error hidden mt-4 p-4 bg-red-50 text-red-700 rounded-lg text-center"></div>
          </div>
        </div>
      </div>
      <div class="error-state hidden">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
          <p class="text-red-600 font-medium">Unable to load content</p>
          <p class="text-red-500 text-sm mt-2 error-message"></p>
        </div>
      </div>
    </div>
  ) : (
    <!-- Not authenticated: Show teaser + sign-in form -->
    <div>
      <slot name="teaser" />
      <div class="border-t border-gray-200 my-8 pt-8">
        <div class="auth-required bg-gradient-to-b from-gray-50 to-white border border-gray-200 rounded-lg p-8">
          <div class="text-center mb-6">
            <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <h3 class="text-xl font-semibold text-gray-900">Protected Content</h3>
            <p class="text-gray-600 mt-2">Sign in to continue reading this article.</p>
          </div>

          <form action="/api/auth/signin" method="POST" class="space-y-4">
            <input type="hidden" name="next" value={returnUrl} />
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email address</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="you@example.com"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors font-medium"
            >
              Send Magic Link
            </button>
            <p class="text-xs text-gray-500 text-center">
              This content requires an invite. If you don't have access, contact the site administrator.
            </p>
          </form>
        </div>
      </div>
    </div>
  )}
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.protected-content');
    if (!container) return;

    const documentId = container.getAttribute('data-document-id');
    const isAuthenticated = container.getAttribute('data-authenticated') === 'true';

    if (!isAuthenticated || !documentId) return;

    const loadingState = container.querySelector('.loading-state');
    const loadedContent = container.querySelector('.loaded-content');
    const accessDeniedState = container.querySelector('.access-denied-state');
    const errorState = container.querySelector('.error-state');
    const errorMessage = container.querySelector('.error-message');

    async function fetchProtectedContent() {
      try {
        const response = await fetch(`/api/content/${documentId}`);
        const data = await response.json();

        if (response.status === 403) {
          // Access denied - show teaser + request access form
          loadingState?.classList.add('hidden');
          accessDeniedState?.classList.remove('hidden');
          return;
        }

        if (!response.ok) {
          throw new Error(data.error || 'Failed to load content');
        }

        // Hide loading, show content
        loadingState?.classList.add('hidden');
        loadedContent?.classList.remove('hidden');

        // Render the portable text content
        if (data.body && Array.isArray(data.body)) {
          const html = renderPortableText(data.body);
          if (loadedContent) {
            loadedContent.innerHTML = html;
          }
        }
      } catch (error) {
        console.error('Error fetching protected content:', error);
        loadingState?.classList.add('hidden');
        errorState?.classList.remove('hidden');
        if (errorMessage && error instanceof Error) {
          errorMessage.textContent = error.message;
        }
      }
    }

    // Simple Portable Text renderer for basic blocks
    function renderPortableText(blocks: any[]): string {
      return blocks.map(block => {
        if (block._type === 'block') {
          const style = block.style || 'normal';
          const tag = getBlockTag(style);
          const className = getBlockClass(style);
          const content = renderChildren(block.children || []);
          return `<${tag}${className ? ` class="${className}"` : ''}>${content}</${tag}>`;
        }
        return '';
      }).join('');
    }

    function getBlockTag(style: string): string {
      const tags: Record<string, string> = {
        h1: 'h1', h2: 'h2', h3: 'h3', h4: 'h4',
        blockquote: 'blockquote',
        normal: 'p',
        lead: 'p',
        small: 'p',
        callout: 'div',
      };
      return tags[style] || 'p';
    }

    function getBlockClass(style: string): string {
      const classes: Record<string, string> = {
        lead: 'text-lg text-gray-600',
        small: 'text-sm',
        callout: 'bg-blue-50 border-l-4 border-blue-500 p-4 my-4',
      };
      return classes[style] || '';
    }

    function renderChildren(children: any[]): string {
      return children.map(child => {
        if (child._type === 'span') {
          let text = escapeHtml(child.text || '');
          const marks = child.marks || [];
          marks.forEach((mark: string) => {
            if (mark === 'strong') text = `<strong>${text}</strong>`;
            if (mark === 'em') text = `<em>${text}</em>`;
            if (mark === 'code') text = `<code>${text}</code>`;
            if (mark === 'underline') text = `<u>${text}</u>`;
            if (mark === 'strike-through') text = `<s>${text}</s>`;
          });
          return text;
        }
        return '';
      }).join('');
    }

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    fetchProtectedContent();

    // Handle request access form submission
    const requestForm = container.querySelector('.request-access-form') as HTMLFormElement;
    const requestSuccess = container.querySelector('.request-success');
    const requestError = container.querySelector('.request-error');

    requestForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitButton = requestForm.querySelector('button[type="submit"]') as HTMLButtonElement;
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';

      requestSuccess?.classList.add('hidden');
      requestError?.classList.add('hidden');

      try {
        const formData = new FormData(requestForm);

        const response = await fetch('/api/content/request-access', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok) {
          requestForm.classList.add('hidden');
          requestSuccess?.classList.remove('hidden');
        } else {
          if (requestError) {
            requestError.textContent = data.error || 'Failed to send request';
            requestError.classList.remove('hidden');
          }
        }
      } catch (error) {
        if (requestError) {
          requestError.textContent = 'An error occurred. Please try again.';
          requestError.classList.remove('hidden');
        }
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = 'Request Access';
      }
    });
  });
</script>
