---
import Main from '../../layouts/main.astro';
import { getUser, isAdmin, createSupabaseAdminClient } from '../../lib/supabase';
import { sanityClient } from "sanity:client";

export const prerender = false;

const contentProps = { title: "Admin Dashboard" };

// Check authentication and admin status
const user = await getUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/auth/error?message=access_denied');
}

if (!isAdmin(user.email)) {
  return Astro.redirect('/auth/error?message=access_denied');
}

// Fetch data for dashboard
const supabaseAdmin = createSupabaseAdminClient();

// Get users with their access counts and full access status
const { data: users } = await supabaseAdmin
  .from('profiles')
  .select('*, article_access(count)')
  .order('created_at', { ascending: false });

// Get recent access logs
const { data: recentLogs } = await supabaseAdmin
  .from('content_access_log')
  .select('*, profiles(email, display_name)')
  .order('accessed_at', { ascending: false })
  .limit(20);

// Get pending access requests
const { data: pendingRequests } = await supabaseAdmin
  .from('access_requests')
  .select('*, profiles(email, display_name)')
  .eq('status', 'pending')
  .order('requested_at', { ascending: false });

// Get protected articles from Sanity
const protectedArticles = await sanityClient.fetch(`
  *[_type == "post" && accessLevel == "protected"]{
    _id,
    title,
    slug
  }
`);

// Create a map of document IDs to article info for easy lookup
const articleMap = new Map<string, { title: string; slug: string }>();
protectedArticles?.forEach((article: any) => {
  articleMap.set(article._id, { title: article.title, slug: article.slug.current });
});

// Stats
const totalUsers = users?.length || 0;
const totalProtectedArticles = protectedArticles?.length || 0;
const recentActivityCount = recentLogs?.length || 0;
const pendingRequestsCount = pendingRequests?.length || 0;
---

<Main content={contentProps}>
<main class="container mx-auto min-h-screen max-w-5xl p-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">Admin Dashboard</h1>
    <div class="flex items-center gap-4">
      <a href="/" class="text-gray-500 hover:underline">View Site</a>
      <a href="/api/auth/signout" class="text-gray-500 hover:underline">Sign out</a>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-blue-600">{totalUsers}</div>
      <div class="text-gray-600">Total Users</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-amber-600">{totalProtectedArticles}</div>
      <div class="text-gray-600">Protected Articles</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-green-600">{recentActivityCount}</div>
      <div class="text-gray-600">Recent Views</div>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-3xl font-bold text-purple-600">{pendingRequestsCount}</div>
      <div class="text-gray-600">Pending Requests</div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="flex gap-4">
      <a
        href="/admin/invite"
        class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Invite User
      </a>
    </div>
  </div>

  <!-- Pending Access Requests -->
  {pendingRequests && pendingRequests.length > 0 && (
    <div class="bg-white rounded-lg shadow p-6 mb-8 border-l-4 border-purple-500">
      <h2 class="text-xl font-semibold mb-4">Pending Access Requests</h2>
      <ul class="divide-y divide-gray-200">
        {pendingRequests.map((request: any) => {
          const article = articleMap.get(request.sanity_document_id);
          return (
            <li class="py-4">
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="font-medium">{request.profiles?.display_name || request.profiles?.email}</div>
                  <div class="text-sm text-gray-600 mt-1">
                    Requesting access to: <span class="font-medium">{article?.title || request.post_title || request.sanity_document_id}</span>
                  </div>
                  {request.message && (
                    <div class="text-sm text-gray-500 mt-2 italic">"{request.message}"</div>
                  )}
                  <div class="text-xs text-gray-400 mt-2">
                    {new Date(request.requested_at).toLocaleString()}
                  </div>
                </div>
                <div class="flex gap-2">
                  <button
                    class="approve-request px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700"
                    data-user-id={request.user_id}
                    data-document-id={request.sanity_document_id}
                    data-request-id={request.id}
                  >
                    Approve
                  </button>
                  <button
                    class="deny-request px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700"
                    data-request-id={request.id}
                  >
                    Deny
                  </button>
                </div>
              </div>
            </li>
          );
        })}
      </ul>
    </div>
  )}

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Users List -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Users</h2>
      {users && users.length > 0 ? (
        <ul class="divide-y divide-gray-200">
          {users.map((profile: any) => (
            <li class="py-3">
              <a href={`/admin/user/${profile.id}`} class="flex items-center justify-between hover:bg-gray-50 -mx-2 px-2 py-1 rounded">
                <div>
                  <div class="flex items-center gap-2">
                    <span class="font-medium">{profile.display_name || profile.email}</span>
                    {profile.has_full_access && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                        Full Access
                      </span>
                    )}
                  </div>
                  <div class="text-sm text-gray-500">{profile.email}</div>
                </div>
                <div class="text-sm text-gray-500">
                  {profile.has_full_access
                    ? 'All articles'
                    : `${profile.article_access?.[0]?.count || 0} articles`}
                </div>
              </a>
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-gray-500">No users yet. <a href="/admin/invite" class="text-blue-600 hover:underline">Invite your first user</a>.</p>
      )}
    </div>

    <!-- Recent Article Views -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Recent Article Views</h2>
      {recentLogs && recentLogs.length > 0 ? (
        <ul class="divide-y divide-gray-200">
          {recentLogs.slice(0, 10).map((log: any) => {
            const article = articleMap.get(log.sanity_document_id);
            return (
              <li class="py-3">
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <div class="font-medium truncate">{log.profiles?.display_name || log.profiles?.email || 'Unknown'}</div>
                    <div class="text-sm text-gray-600 truncate">
                      {article?.title || log.sanity_document_id}
                    </div>
                  </div>
                  <div class="text-sm text-gray-400 whitespace-nowrap">
                    {new Date(log.accessed_at).toLocaleDateString()}
                  </div>
                </div>
              </li>
            );
          })}
        </ul>
      ) : (
        <p class="text-gray-500">No views yet.</p>
      )}
    </div>
  </div>

  <!-- Protected Articles -->
  <div class="bg-white rounded-lg shadow p-6 mt-8">
    <h2 class="text-xl font-semibold mb-4">Protected Articles</h2>
    {protectedArticles && protectedArticles.length > 0 ? (
      <ul class="divide-y divide-gray-200">
        {protectedArticles.map((article: any) => (
          <li class="py-3 flex items-center justify-between">
            <div>
              <div class="font-medium">{article.title}</div>
              <div class="text-sm text-gray-500">ID: {article._id}</div>
            </div>
            <a
              href={`/posts/${article.slug.current}`}
              class="text-blue-600 hover:underline text-sm"
              target="_blank"
            >
              View
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-gray-500">No protected articles. Set an article's access level to "Protected" in Sanity to see it here.</p>
    )}
  </div>
</main>
</Main>

<script>
  const spinnerSvg = `<svg class="animate-spin -ml-1 mr-1 h-3 w-3 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>`;

  // Handle approve/deny buttons for access requests
  document.querySelectorAll('.approve-request').forEach(button => {
    button.addEventListener('click', async (e) => {
      const target = e.target as HTMLButtonElement;
      const requestId = target.dataset.requestId;
      const userId = target.dataset.userId;
      const documentId = target.dataset.documentId;

      if (!requestId) return;

      target.disabled = true;
      target.innerHTML = `${spinnerSvg}Approving...`;

      try {
        const response = await fetch('/api/admin/respond-request', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            requestId,
            action: 'approve',
            userId,
            documentId,
          }),
        });

        const result = await response.json();

        if (result.success) {
          // Remove the request item from the list
          const listItem = target.closest('li');
          if (listItem) {
            listItem.style.opacity = '0.5';
            listItem.innerHTML = '<div class="py-4 text-green-600">Access granted</div>';
            setTimeout(() => listItem.remove(), 2000);
          }
        } else {
          alert('Error: ' + (result.error || 'Failed to approve request'));
          target.disabled = false;
          target.textContent = 'Approve';
        }
      } catch (error) {
        console.error('Error approving request:', error);
        alert('An error occurred. Please try again.');
        target.disabled = false;
        target.textContent = 'Approve';
      }
    });
  });

  document.querySelectorAll('.deny-request').forEach(button => {
    button.addEventListener('click', async (e) => {
      const target = e.target as HTMLButtonElement;
      const requestId = target.dataset.requestId;

      if (!requestId) return;

      if (!confirm('Are you sure you want to deny this request?')) return;

      target.disabled = true;
      target.innerHTML = `${spinnerSvg}Denying...`;

      try {
        const response = await fetch('/api/admin/respond-request', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            requestId,
            action: 'deny',
          }),
        });

        const result = await response.json();

        if (result.success) {
          // Remove the request item from the list
          const listItem = target.closest('li');
          if (listItem) {
            listItem.style.opacity = '0.5';
            listItem.innerHTML = '<div class="py-4 text-red-600">Request denied</div>';
            setTimeout(() => listItem.remove(), 2000);
          }
        } else {
          alert('Error: ' + (result.error || 'Failed to deny request'));
          target.disabled = false;
          target.textContent = 'Deny';
        }
      } catch (error) {
        console.error('Error denying request:', error);
        alert('An error occurred. Please try again.');
        target.disabled = false;
        target.textContent = 'Deny';
      }
    });
  });
</script>
